func solution(_ s:String) -> [Int] {
    let s = s.map{ String($0) }
    var dic = [String: Int]()
    var result = [Int]()
    
    for i in 0 ..< s.count {
        let target = dic[s[i]]
        
        dic[s[i]] = i
        
        if target == nil {
            result.append(-1)
        } else {
            result.append(abs(target! - i))
        }
    }
    
    return result
}
